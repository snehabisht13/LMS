<div class="container my-5">

  <h2 class="fw-bold text-center mb-5">Loan Offers by Banks</h2>

  <% @banks.each do |bank| %>

    <!-- Bank Header -->
    <div class="card border-0 shadow-sm rounded-4 mb-4">
      <div class="card-body d-flex justify-content-between align-items-center">
        <div>
          <h4 class="fw-semibold mb-1"><%= bank.email %></h4>
          <p class="text-muted mb-0">Trusted Banking Partner</p>
        </div>
        <span class="badge bg-primary rounded-pill px-3 py-2">
          <%= bank.loans.count %> Loans
        </span>
      </div>
    </div>

    <% if bank.loans.any? %>

      <!-- Loans -->
      <div class="row g-4 mb-5">
        <% bank.loans.each do |loan| %>
          <div class="col-md-6 col-lg-4">
            <div class="card h-100 border-0 shadow-sm rounded-4 loan-card small-card">
              <div class="card-body d-flex flex-column p-3">

                <h6 class="fw-bold mb-1"><%= loan.title %></h6>

                <p class="text-muted small mb-2 flex-grow-1">
                  <%= truncate(loan.description, length: 70) %>
                </p>

                <div class="bg-light rounded-3 p-2 mb-2 small">
                  <div class="d-flex justify-content-between">
                    <span>ğŸ’° Amount</span>
                    <strong>â‚¹<%= loan.max_amount %></strong>
                  </div>
                  <div class="d-flex justify-content-between">
                    <span>ğŸ“ˆ Interest</span>
                    <strong><%= loan.interest_rate %>%</strong>
                  </div>
                  <div class="d-flex justify-content-between">
                    <span>â³ Tenure</span>
                    <strong><%= loan.tenure_months %> mo</strong>
                  </div>
                </div>

               

              <% if customer_signed_in? && current_customer.applied_for?(loan) %>
              <button class="btn btn-success btn-sm rounded-pill mt-auto" disabled>
                Applied
              </button>
            <% else %>
              <%= button_to "Apply",
                    loan_loan_applications_path(loan),
                    method: :post,
                    class: "btn btn-outline-primary btn-sm rounded-pill mt-auto" %>
            <% end %>
            

              </div>
            </div>
          </div>
        <% end %>
      </div>

    <% else %>
      <div class="alert alert-info mb-5 text-center">
        No loans available for this bank.
      </div>
    <% end %>

  <% end %>

</div>
