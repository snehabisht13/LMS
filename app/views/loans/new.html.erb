<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">

      <div class="card shadow-lg border-0 rounded-4">
        <div class="card-body p-4">

          <h3 class="text-center mb-4 fw-bold">New Loan </h3>

          <%= form_with model: @loan, local: true do |f| %>

            <!-- Loan Title -->
            <div class="form-floating mb-3">
              <%= f.text_field :title, class: "form-control", placeholder: "Loan Name" %>
              <label>Loan Name</label>
            </div>

            <!-- Description -->
            <div class="form-floating mb-3">
              <%= f.text_area :description, class: "form-control", placeholder: "Description", style: "height: 120px" %>
              <label>Loan Description</label>
            </div>

            <!-- Interest Rate -->
            <div class="row g-3 mb-3">
              <div class="col-md-6">
                <div class="form-floating">
                  <%= f.number_field :interest_rate, step: 0.01, class: "form-control", placeholder: "Interest Rate" %>
                  <label>Interest Rate (%)</label>
                </div>
              </div>

              <!-- Max Amount -->
              <div class="col-md-6">
                <div class="form-floating">
                  <%= f.number_field :max_amount, class: "form-control", placeholder: "Max Amount" %>
                  <label>Max Amount (â‚¹)</label>
                </div>
              </div>
            </div>

            <!-- Tenure -->
            <div class="form-floating mb-4">
              <%= f.number_field :tenure_months, class: "form-control", placeholder: "Tenure" %>
              <label>Tenure (Months)</label>
            </div>

            <!-- Submit Button -->
            <div class="d-grid">
              <%= f.submit "Post Loan",
                    class: "btn btn-primary btn-lg rounded-pill fw-semibold" %>
            </div>

          <% end %>

        </div>
      </div>

    </div>
  </div>
</div>
